@section scripts{
    <script src="~/Scripts/lightslider.js"></script>
    <script>
        var sw = screen.width;
        var a1L = (sw >= 1200) ? 150 : (sw >= 1044) ? 117 : (sw >= 992) ? 142 : (sw >= 768) ? 66 : (sw >= 715) ? 180 : (sw >= 670) ? 155 : 150;
        $(function () {
            $('.laptop, .fon, .tablet, .gif').addClass('opaque');
            var slova = $('.sp2');
            if (sw <= 1200 && sw > 992) {
                slova.css("left", "-=60");
            } else if (sw <= 992 && sw >= 768) {
                slova.css("left", "-=135");
            } else if (sw <= 768 && sw > 705) {
                for (var i = 0; i < slova.length; i++) {
                    $(slova[i]).css("left", $(slova[i]).position().left / 1.1);
                };
            } else if (sw <= 705 && sw > 650) {
                for (var i = 0; i < slova.length; i++) {
                    $(slova[i]).css("left", $(slova[i]).position().left / 1.2);
                };
            } else if (sw <= 650) {
                for (var i = 0; i < slova.length; i++) {
                    $(slova[i]).css("left", $(slova[i]).position().left / 1.3);
                };
            }
        });

        $("#content-slider").lightSlider({                
            item: 3,
            auto: true,
            loop: true,
            pauseOnHover: false,
            pause: 4000,
            speed: 800,
            slideMargin: 0,
            controls: false,
            enableDrag: false,
            freeMove: false,
            pager: false,

            onBeforeStart: function (el) {
                $('.prvi').addClass('zumIn');
            },
            onBeforeSlide: function (el) {
                $('.active').next().removeClass('zumIn');
                if ($('.active').next().next().hasClass('prvi')) {
                    $('.prvi').addClass('zumIn');
                }
                $('.active').next().next().addClass('zumIn');
            },
            onAfterSlide: function (el) {
                if ($('.active').hasClass('prvi')) {
                    $('.prvi').removeClass('zumIn');
                }
                $('.active').prev().removeClass('zumIn');
            }
        });        

        $('#sp1').delay(100).animate({ left: a1L }, 1000).delay(1000).animate({ left: -50 }, 400).animate({ left: 1500 }, 800, function () {
            var div = document.getElementById("sp1");
            div.parentNode.removeChild(div);

            $('#sp101').animate({ top: 100 }, 1000, 'linear').animate({ top: 60 }, 500).delay(100).animate({ top: 100 }, 500, 'linear').animate({ top: 100 }, 3200, function () {
